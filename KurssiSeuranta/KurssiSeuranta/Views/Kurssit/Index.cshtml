@model IEnumerable<KurssiSeuranta.ViewModels.KurssiViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div id="otsikko" style="margin-top: 100px;">
        <h1>Kurssit</h1>
    </div>
    <p>
        @Html.ActionLink("Luo uusi", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Kurssinimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kurssikoodi)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Kurssinimi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kurssikoodi)
                </td>
                <td>
                    @Html.ActionLink("Muokkaa", "Edit", new { id = item.KurssiID }) |
                    @Html.ActionLink("Tiedot", "Details", new { id = item.KurssiID }) |
                    @Html.ActionLink("Poista", "Delete", new { id = item.KurssiID })
                </td>
            </tr>
        }

    </table>
</div>